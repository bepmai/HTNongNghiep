<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền trắng -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu nền trắng -->
        </shape>
    </item>

    <!-- Đường viền dưới -->
    <item android:gravity="bottom"> <!-- Đảm bảo viền được căn ở dưới -->
        <shape android:shape="rectangle">
            <size android:height="1dp" /> <!-- Độ dày của viền -->
            <solid android:color="#CCCCCC" /> <!-- Màu của đường viền -->
        </shape>
    </item>
</layer-list>
