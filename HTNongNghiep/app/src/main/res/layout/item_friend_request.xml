<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/ic_stroke_friend"
    >
    <!-- Ảnh đại diện -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_ellipse"
        app:civ_border_color="#3CC18E"
        app:civ_border_width="1dp" />

    <!-- Nội dung văn bản -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        >

        <!-- Tên người dùng và thời gian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start">

            <!-- Tên người dùng -->
            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="User Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Thời gian -->
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 phút"
                android:textSize="14sp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- Vai trò -->
        <TextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thợ vườn tập sự"
            android:textColor="#000" />

        <!-- Bạn chung -->
        <TextView
            android:id="@+id/mutualFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14 bạn chung"
            android:textColor="#888888"
            android:drawablePadding="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_bg_btn_dongy"
                android:text="Đồng ý"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_bg_btn_xoa"
                android:text="Xoá"
                android:textColor="#33C18F"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
