<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Container.RevenueExpenditure.RevenueExpenditureActivity">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3CC18E"
        android:padding="10dp"
        app:alignItems="center"
        app:flexDirection="row"
        app:justifyContent="flex_start">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/search"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/border_radius_5dp"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            app:alignItems="center"
            app:flexDirection="row">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm"
                android:textColor="#817E7E"/>
        </com.google.android.flexbox.FlexboxLayout>

        <ImageButton
            android:id="@+id/notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:layout_marginStart="8dp"
            android:src="@drawable/notification"/>
        <ImageButton
            android:id="@+id/message"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:layout_marginStart="8dp"
            android:src="@drawable/message"/>
    </com.google.android.flexbox.FlexboxLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Báo cáo thu"
                android:textColor="@color/green"
                android:textSize="18sp"
                android:backgroundTint="@color/white"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/green"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Báo cáo chi"
                android:textColor="@color/white_black"
                android:layout_weight="1"
                android:textSize="18sp"
                android:backgroundTint="@color/white"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white"/>
        </LinearLayout>

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview"
            android:scrollbars="vertical"
            tools:listitem="@layout/list_item_revenue_expenditure"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="40dp"
            android:backgroundTint="@color/green"
            android:src="@drawable/ic_baseline_add_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>