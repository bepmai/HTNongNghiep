<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/super_white_gray"
    tools:context=".Container.UI.ShopBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/shopbar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/none_border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Sản Phẩm"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Danh mục hàng"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/product_image_1"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_3" />

                <TextView
                    android:id="@+id/product_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cây Ổi"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/product_price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500.000đ"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/product_discount_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-20%"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/product_rating_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8 (100 Đánh Giá)"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/product_image_2"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img" />

                <TextView
                    android:id="@+id/product_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cây Táo"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/product_price_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200.000đ"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/product_discount_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-25%"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/product_rating_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.8 (100 Đánh Giá)"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/product_image_3"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_1" />

                <TextView
                    android:id="@+id/product_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cây Xoài"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/product_price_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="600.000đ"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/product_discount_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-15%"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/product_rating_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5 (50 Đánh Giá)"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/product_image_4"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_2" />

                <TextView
                    android:id="@+id/product_name_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cây cam"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/product_price_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.000đ"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/product_discount_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-10%"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/product_rating_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0 (30 Đánh Giá)"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>